<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="baseState1" type="String" />
        <variable name="pokeProgress1" type="Integer" />

        <variable name="baseState2" type="String" />
        <variable name="pokeProgress2" type="Integer" />

        <variable name="baseState3" type="String" />
        <variable name="pokeProgress3" type="Integer" />

        <variable name="baseState4" type="String" />
        <variable name="pokeProgress4" type="Integer" />

        <variable name="baseState5" type="String" />
        <variable name="pokeProgress5" type="Integer" />

        <variable name="baseState6" type="String" />
        <variable name="pokeProgress6" type="Integer" />



    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkTheme">

        <TextView
            android:id="@+id/txtSp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="SPEED"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSpeed"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@{baseState1}"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/txtSp"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:indeterminate="false"
            android:max="150"
            android:minWidth="250dp"
            android:progress="@{pokeProgress1}"
            android:progressDrawable="@drawable/greenprogress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSpeed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtSPDEF"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="SP-DEF"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSp" />

        <TextView
            android:id="@+id/txtSPdef"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{baseState2}"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/txtSPDEF"
            app:layout_constraintTop_toBottomOf="@+id/txtSpeed"
            tools:text="132" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:indeterminate="false"
            android:max="150"
            android:minWidth="250dp"
            android:progress="@{pokeProgress2}"
            android:progressDrawable="@drawable/greenprogress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSpeed"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <TextView
            android:id="@+id/txtSPATTK"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="SP-ATK"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSPDEF" />

        <TextView
            android:id="@+id/txtSPatt"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{baseState3}"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/txtSPDEF"
            app:layout_constraintTop_toBottomOf="@+id/txtSPdef"
            tools:text="132" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:indeterminate="false"
            android:max="150"
            android:minWidth="250dp"
            android:progress="@{pokeProgress3}"
            android:progressDrawable="@drawable/greenprogress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSpeed"
            app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

        <TextView
            android:id="@+id/txtDef"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="DEF"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSPATTK" />

        <TextView
            android:id="@+id/txtDeff"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{baseState4}"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/txtSPDEF"
            app:layout_constraintTop_toBottomOf="@+id/txtSPatt"
            tools:text="132" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:indeterminate="false"
            android:max="150"
            android:minWidth="250dp"
            android:progress="@{pokeProgress4}"
            android:progressDrawable="@drawable/greenprogress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSpeed"
            app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

        <TextView
            android:id="@+id/txtAtk"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="ATK"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDef" />

        <TextView
            android:id="@+id/txtatk"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{baseState5}"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/txtSPDEF"
            app:layout_constraintTop_toBottomOf="@+id/txtDeff"
            tools:text="132" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:indeterminate="false"
            android:max="150"
            android:minWidth="250dp"
            android:progress="@{pokeProgress5}"
            android:progressDrawable="@drawable/greenprogress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSpeed"
            app:layout_constraintTop_toBottomOf="@+id/progressBar4" />

        <TextView
            android:id="@+id/txtHPstate"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="HP"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAtk" />

        <TextView
            android:id="@+id/txthpstate"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{baseState6}"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtHPstate"
            app:layout_constraintTop_toBottomOf="@+id/txtatk"
            tools:text="132" />

        <ProgressBar
            android:id="@+id/progressBar6"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:indeterminate="false"
            android:max="150"
            android:minWidth="250dp"
            android:progress="@{pokeProgress6}"
            android:progressDrawable="@drawable/greenprogress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSpeed"
            app:layout_constraintTop_toBottomOf="@+id/progressBar5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>